- if user_signed_in?
  - if @product.like_user(current_user)
    = button_to product_like_path(@product, @like), method: :delete, class: "btn btn-default", remote: true do
      = image_tag("icon_heart_red.svg")
      %span
      #like-sum
        = @product.likes_count
  - else
    = button_to product_likes_path(@product), class: "btn btn-default", remote: true do
      = image_tag("icon_heart.svg")
      %span
      #like-sum
        = @product.likes_count
- else
  = image_tag("icon_heart.svg")
  %span
    #like-sum
      = @product.likes_count
