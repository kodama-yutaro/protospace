.container.proto-new
  = form_for @product do |f|
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          .proto-new-title
            = f.text_field :title, placeholder: "Title"
        .row
          .col-md-12
            .cover-image-upload
              = f.fields_for :product_images do |image_form|
                = image_form.file_field :image
                = image_form.hidden_field :status, value: :main
          .col-md-12
            %ul.proto-sub-list.list-group
              - 2.times do
                %li.list-group-item.col-md-4
                  .image-upload
                    = f.fields_for :product_images do |image_form|
                      = image_form.file_field :image
                      = image_form.hidden_field :status, value: :sub
              %li.list-group-item.col-md-4
                .image-upload-plus
                  %span +
                  = f.fields_for :product_images do |image_form|
                      = image_form.file_field :image
                      = image_form.hidden_field :status, value: :sub
      .row.proto-description
        .col-md-12
          = f.text_field :catch_copy, placeholder: "Catch Copy"
        .col-md-12
          = f.text_field :concept, cols: "30", rows: "4", placeholder: "Concept"
        .col-md-12
          %h4 Tag List
          .row
            .col-md-3
              %input{ type: "text", placeholder: "Web Design" }
            .col-md-3
              %input{ type: "text", placeholder: "UI" }
            .col-md-3
              %input{ type: "text", placeholder: "Application" }/
      .row.text-center.proto-btn
        = button_tag "Publish",type: "submit", class: "btn btn-lg btn-primary btn-block"
