.jumbotron
  .container.text-center
    = image_tag("header_logo.png", alt: "PROTO TYPE - SHARE THE PROTOTYPE", height: "73px")
.filter-nav
  .container
    .row
      %ul.nav.nav-pills.col-lg-11
        %li{ class: active?("products/popular"), role: "presentation" }
          = link_to "Popular PROTO", products_popular_index_path
        %li{ class: active?("products"), role: "presentation" }
          = link_to "Newest PROTO", root_path
      = button_tag "View Tags", type: "button", class: "btn btn-default col-lg-1"
= render partial: "products/product", locals: { products: @products }
.text-center
  %ul.pagination
    %li.disabled
      = link_to "#", aria: { label: "Previous" } do
        %span{"aria-hidden" => "true"} «
    %li.active
      = link_to "1","#"
      %span.sr-only (current)
    %li
      = link_to "2","#"
    %li
      = link_to "3","#"
    %li
      = link_to "4","#"
    %li
      = link_to "5","#"
    %li
      = link_to "#", aria: { label: "Next" } do
        %span{ "aria-hidden" => "true" } »
