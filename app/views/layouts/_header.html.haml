.navbar.navbar-default.navbar-static-top.navbar-fixed-top
  .container
    = button_tag type: "button", class: "navbar-toggle", data: {toggle: "collapse"}, date: {target: ".navbar-responsive-collapse"} do
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    = link_to "/", class: "navbar-brand" do
      = image_tag("logo.png", alt: "PROTO TYPE - SHARE THE PROTOTYPE", height: "36px")
    .navbar-collapse.collapse.navbar-responsive-collapse
      - if user_signed_in?
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            = link_to "#", class: "dropdown-toggle", aria: {expanded: "false"}, data: {toggle: "dropdown"}, role: "button" do
              = @user.nickname
              %span.caret
            %ul.dropdown-menu{role: "menu"}
              %li
                = link_to "Profile Edit", "#"
              %li
                = link_to("Logout", destroy_user_session_path, method: :delete)
          %li
            .btn.btn-primary.navbar-btn
              = link_to "/proto/new" do
                New Proto
      - else
        %ul.nav.navbar-nav.navbar-right
          %li
            .btn.btn-primary.navbar-btn
              = link_to "Get Started",new_user_registration_path
